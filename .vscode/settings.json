{
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "top",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },

  // File Settings
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/build": true,
    "**/.pnp": true,
    "**/.pnp.js": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/build/**": true,
    "**/.pnp/**": true
  },

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/coverage": true,
    "**/.pnp": true,
    "**/.pnp.js": true,
    "**/playwright-report": true,
    "**/test-results": true
  },

  // Language Specific Settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },

  // ESLint Settings
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["."],

  // TypeScript Settings
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  // React/JSX Settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,

  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.ignoreLimitWarning": true,

  // Terminal Settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",

  // Workspace Trust
  "security.workspace.trust.untrustedFiles": "open",

  // Performance
  "files.maxMemoryForLargeFilesMB": 4096,

  // Playwright Settings
  "playwright.reuseBrowser": false,
  "playwright.showTrace": false,

  // Prettier Settings (if you have a .prettierrc file, these can be overridden)
  "prettier.requireConfig": false,
  "prettier.useEditorConfig": false,

  // Path Intellisense
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/src",
    "components": "${workspaceFolder}/src/components",
    "utils": "${workspaceFolder}/src/components/util",
    "routes": "${workspaceFolder}/src/routes",
    "data": "${workspaceFolder}/src/data"
  },

  // Auto Import
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // Theme Settings - WebStorm Modern UI
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "material-icon-theme",

  // Vibrancy Extension Settings (optional - can disable for WebStorm look)
  "vibrancy.type": "dark",
  "vibrancy.opacity": 1.0,
  "vibrancy.theme": "auto",
  "vibrancy.performanceMode": false,
  "workbench.colorCustomizations": {
    // WebStorm Darcula-inspired colors
    // Activity Bar - WebStorm style
    "activityBar.background": "#3c3f41",
    "activityBar.foreground": "#bbbbbb",
    "activityBarBadge.background": "#4e9a06",
    "activityBarBadge.foreground": "#ffffff",
    "activityBar.activeBorder": "#4e9a06",
    "activityBar.inactiveForeground": "#808080",

    // Status Bar - WebStorm style
    "statusBar.background": "#3c3f41",
    "statusBar.foreground": "#bbbbbb",
    "statusBar.noFolderBackground": "#3c3f41",
    "statusBar.debuggingBackground": "#cc7832",
    "statusBar.border": "#515658",
    "statusBarItem.prominentBackground": "#4e9a06",
    "statusBarItem.prominentHoverBackground": "#6b9a06",

    // Title Bar - WebStorm style
    "titleBar.activeBackground": "#3c3f41",
    "titleBar.activeForeground": "#bbbbbb",
    "titleBar.inactiveBackground": "#2b2b2b",
    "titleBar.inactiveForeground": "#808080",
    "titleBar.border": "#515658",

    // Sidebar - WebStorm style
    "sideBar.background": "#3c3f41",
    "sideBar.foreground": "#bbbbbb",
    "sideBarTitle.foreground": "#ffffff",
    "sideBar.border": "#515658",
    "sideBarSectionHeader.background": "#46494a",
    "sideBarSectionHeader.foreground": "#bbbbbb",

    // Editor - WebStorm Darcula style
    "editor.background": "#2b2b2b",
    "editor.foreground": "#a9b7c6",
    "editorLineNumber.foreground": "#606366",
    "editorLineNumber.activeForeground": "#a9b7c6",
    "editorIndentGuide.background": "#3c3f41",
    "editorIndentGuide.activeBackground": "#515658",
    "editor.selectionBackground": "#214283",
    "editor.selectionHighlightBackground": "#21428340",
    "editor.wordHighlightBackground": "#575757",
    "editor.wordHighlightStrongBackground": "#57575780",
    "editorCursor.foreground": "#a9b7c6",
    "editorWhitespace.foreground": "#3c3f41",
    "editorLineHighlight.background": "#323232",
    "editorGutter.background": "#313335",
    "editorGutter.modifiedBackground": "#4e9a06",
    "editorGutter.addedBackground": "#629755",
    "editorGutter.deletedBackground": "#cc7832",
    "editorBracketMatch.background": "#214283",
    "editorBracketMatch.border": "#4e9a06",

    // Tabs - WebStorm style
    "tab.activeBackground": "#2b2b2b",
    "tab.inactiveBackground": "#3c3f41",
    "tab.activeForeground": "#a9b7c6",
    "tab.inactiveForeground": "#808080",
    "tab.border": "#515658",
    "tab.activeBorder": "#4e9a06",
    "tab.activeBorderTop": "#4e9a06",
    "tab.hoverBackground": "#46494a",
    "tab.unfocusedActiveForeground": "#808080",
    "tab.unfocusedInactiveForeground": "#606366",

    // Panel - WebStorm style
    "panel.background": "#2b2b2b",
    "panel.border": "#515658",
    "panelTitle.activeForeground": "#a9b7c6",
    "panelTitle.inactiveForeground": "#808080",
    "panelInput.border": "#515658",

    // Terminal - WebStorm style
    "terminal.background": "#2b2b2b",
    "terminal.foreground": "#a9b7c6",
    "terminalCursor.background": "#2b2b2b",
    "terminalCursor.foreground": "#a9b7c6",
    "terminal.border": "#515658",
    "terminal.selectionBackground": "#214283",

    // Peek view - WebStorm style
    "peekView.border": "#4e9a06",
    "peekViewEditor.background": "#2b2b2b",
    "peekViewResult.background": "#3c3f41",
    "peekViewTitle.background": "#2b2b2b",
    "peekViewTitleLabel.foreground": "#a9b7c6",
    "peekViewEditorGutter.background": "#2b2b2b",

    // Lists - WebStorm style
    "list.activeSelectionBackground": "#214283",
    "list.activeSelectionForeground": "#ffffff",
    "list.inactiveSelectionBackground": "#46494a",
    "list.hoverBackground": "#46494a",
    "list.focusBackground": "#214283",
    "list.focusForeground": "#ffffff",
    "list.highlightForeground": "#4e9a06",

    // Input fields - WebStorm style
    "input.background": "#3c3f41",
    "input.foreground": "#a9b7c6",
    "input.border": "#515658",
    "inputOption.activeBorder": "#4e9a06",
    "inputOption.hoverBackground": "#46494a",
    "inputValidation.infoBackground": "#4e9a0640",
    "inputValidation.infoBorder": "#4e9a06",
    "inputValidation.warningBackground": "#cc783240",
    "inputValidation.warningBorder": "#cc7832",
    "inputValidation.errorBackground": "#cc783240",
    "inputValidation.errorBorder": "#cc7832",

    // Dropdowns - WebStorm style
    "dropdown.background": "#3c3f41",
    "dropdown.foreground": "#a9b7c6",
    "dropdown.border": "#515658",
    "dropdown.listBackground": "#3c3f41",

    // Buttons - WebStorm style
    "button.background": "#4e9a06",
    "button.foreground": "#ffffff",
    "button.hoverBackground": "#6b9a06",
    "button.border": "#4e9a06",
    "button.secondaryBackground": "#3c3f41",
    "button.secondaryForeground": "#a9b7c6",
    "button.secondaryHoverBackground": "#46494a",

    // Badges - WebStorm style
    "badge.background": "#4e9a06",
    "badge.foreground": "#ffffff",

    // Scrollbars - WebStorm style
    "scrollbarSlider.background": "#515658",
    "scrollbarSlider.hoverBackground": "#606366",
    "scrollbarSlider.activeBackground": "#6b6d6f",

    // Progress bar - WebStorm style
    "progressBar.background": "#4e9a06",

    // Editor widgets - WebStorm style
    "editorWidget.background": "#3c3f41",
    "editorWidget.border": "#515658",
    "editorWidget.foreground": "#a9b7c6",
    "editorSuggestWidget.background": "#3c3f41",
    "editorSuggestWidget.border": "#515658",
    "editorSuggestWidget.foreground": "#a9b7c6",
    "editorSuggestWidget.highlightForeground": "#4e9a06",
    "editorSuggestWidget.selectedBackground": "#214283",
    "editorSuggestWidget.focusHighlightForeground": "#4e9a06",

    // Diff editor - WebStorm style
    "diffEditor.insertedTextBackground": "#62975540",
    "diffEditor.removedTextBackground": "#cc783240",
    "diffEditor.insertedLineBackground": "#62975520",
    "diffEditor.removedLineBackground": "#cc783220",
    "diffEditor.border": "#515658",

    // Merge editor - WebStorm style
    "merge.currentHeaderBackground": "#214283",
    "merge.incomingHeaderBackground": "#62975540",
    "merge.commonHeaderBackground": "#3c3f41",
    "merge.border": "#515658",

    // Git decorations - WebStorm style
    "gitDecoration.modifiedResourceForeground": "#cc7832",
    "gitDecoration.deletedResourceForeground": "#cc7832",
    "gitDecoration.untrackedResourceForeground": "#629755",
    "gitDecoration.ignoredResourceForeground": "#808080",
    "gitDecoration.conflictingResourceForeground": "#cc7832",
    "gitDecoration.stageModifiedResourceForeground": "#4e9a06",
    "gitDecoration.stageDeletedResourceForeground": "#cc7832",

    // Breadcrumbs - WebStorm style
    "breadcrumb.foreground": "#808080",
    "breadcrumb.activeSelectionForeground": "#a9b7c6",
    "breadcrumb.focusForeground": "#4e9a06",
    "breadcrumbPicker.background": "#3c3f41",

    // Notification - WebStorm style
    "notificationCenter.border": "#515658",
    "notificationCenterHeader.background": "#3c3f41",
    "notificationToast.border": "#515658",
    "notifications.background": "#3c3f41",
    "notifications.border": "#515658",
    "notifications.foreground": "#a9b7c6",
    "notificationLink.foreground": "#4e9a06",

    // Quick picker - WebStorm style
    "quickInput.background": "#3c3f41",
    "quickInput.foreground": "#a9b7c6",
    "quickInputList.focusBackground": "#214283",
    "quickInputList.focusForeground": "#ffffff",

    // Menu - WebStorm style
    "menu.background": "#3c3f41",
    "menu.foreground": "#a9b7c6",
    "menu.selectionBackground": "#214283",
    "menu.selectionForeground": "#ffffff",
    "menu.separatorBackground": "#515658",
    "menubar.selectionBackground": "#46494a",
    "menubar.selectionForeground": "#a9b7c6"
  },
  // WebStorm-inspired UI Settings
  "workbench.tree.indent": 12,
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.tabCloseButton": "right",
  "workbench.startupEditor": "welcomePage",
  "workbench.statusBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.renderIndentGuides": "always",
  "editor.semanticHighlighting.enabled": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "fontStyle": "italic",
          "foreground": "#808080"
        }
      },
      {
        "scope": ["string", "string.quoted"],
        "settings": {
          "foreground": "#6a8759"
        }
      },
      {
        "scope": ["constant.numeric", "constant.language"],
        "settings": {
          "foreground": "#6897bb"
        }
      },
      {
        "scope": ["keyword", "storage.type", "storage.modifier"],
        "settings": {
          "foreground": "#cc7832"
        }
      },
      {
        "scope": ["entity.name.function", "entity.name.method"],
        "settings": {
          "foreground": "#ffc66d"
        }
      },
      {
        "scope": ["entity.name.class", "entity.name.type"],
        "settings": {
          "foreground": "#ffc66d"
        }
      },
      {
        "scope": ["variable", "variable.other"],
        "settings": {
          "foreground": "#a9b7c6"
        }
      },
      {
        "scope": ["entity.name.tag"],
        "settings": {
          "foreground": "#e8bf6a"
        }
      },
      {
        "scope": ["entity.other.attribute-name"],
        "settings": {
          "foreground": "#bababa"
        }
      },
      {
        "scope": ["support.function", "support.type"],
        "settings": {
          "foreground": "#ffc66d"
        }
      },
      {
        "scope": ["constant.character.escape"],
        "settings": {
          "foreground": "#cc7832"
        }
      },
      {
        "scope": ["punctuation"],
        "settings": {
          "foreground": "#a9b7c6"
        }
      },
      {
        "scope": ["meta.brace"],
        "settings": {
          "foreground": "#a9b7c6"
        }
      },
      {
        "scope": ["storage.type.function"],
        "settings": {
          "foreground": "#ffc66d"
        }
      },
      {
        "scope": ["entity.name.namespace"],
        "settings": {
          "foreground": "#ffc66d"
        }
      }
    ]
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "function": {
        "foreground": "#ffc66d"
      },
      "method": {
        "foreground": "#ffc66d"
      },
      "class": {
        "foreground": "#ffc66d"
      },
      "interface": {
        "foreground": "#ffc66d"
      },
      "typeParameter": {
        "foreground": "#ffc66d"
      },
      "enum": {
        "foreground": "#ffc66d"
      },
      "variable": {
        "foreground": "#a9b7c6"
      },
      "property": {
        "foreground": "#a9b7c6"
      },
      "parameter": {
        "foreground": "#a9b7c6"
      },
      "namespace": {
        "foreground": "#ffc66d"
      },
      "type": {
        "foreground": "#ffc66d"
      },
      "comment": {
        "foreground": "#808080",
        "fontStyle": "italic"
      },
      "string": {
        "foreground": "#6a8759"
      },
      "keyword": {
        "foreground": "#cc7832"
      },
      "number": {
        "foreground": "#6897bb"
      }
    }
  },
  "workbench.editor.tabActionLocation": "right",
  "circleci.filters.branchFilter": "allBranches",
  "circleci.persistedProjectSelection": ["gh/acsbe/accessFlow"],
  "circleci.filters.myPipelinesOnly": true
}
