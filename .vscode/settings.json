{
  // Editor Settings
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Consolas', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.stickyScroll.enabled": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderWhitespace": "selection",
  "editor.trimAutoWhitespace": true,
  "editor.trimFinalNewlines": true,
  "editor.insertFinalNewline": true,

  // File Explorer Settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": false,
    "**/dist": true,
    "**/build": true,
    "**/test-results": true,
    "**/playwright-report": true,
    "**/playwright/.cache": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/playwright/.cache/**": true
  },

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/package-lock.json": true,
    "**/test-results": true,
    "**/playwright-report": true,
    "**/playwright/.cache": true
  },
  "search.useIgnoreFiles": true,
  "search.smartCase": true,

  // Terminal Settings
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.smoothScrolling": true,

  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.ignoreLimitWarning": true,

  // IntelliSense & Autocomplete
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",

  // Language Specific Settings
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "other": false,
      "comments": false,
      "strings": false
    }
  },

  // Performance & UI
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,

  // Extensions Recommendations (will be used if extensions.json exists)
  "extensions.ignoreRecommendations": false,

  // Accessibility
  "editor.accessibilitySupport": "auto",

  // Playwright Test Settings
  "playwright.reuseBrowser": false,
  "playwright.showTrace": false,
  "playwright.env": {
    "DEBUG": "pw:api"
  },
  "playwright.testIdAttribute": "data-testid",

  // Test File Settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "files.associations": {
    "*.spec.js": "javascript",
    "*.spec.ts": "typescript",
    "*.test.js": "javascript",
    "*.test.ts": "typescript",
    "playwright.config.js": "javascript",
    "playwright.config.ts": "typescript",
    "*.jsx": "javascriptreact"
  },

  // React/JSX Specific Settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",


  // WebStorm-like Theme
  "workbench.colorTheme": "Default Dark+",
  "workbench.colorCustomizations": {
    "editor.background": "#2B2B2B",
    "editor.foreground": "#A9B7C6",
    "sideBar.background": "#3C3F41",
    "sideBar.foreground": "#BBBBBB",
    "activityBar.background": "#3C3F41",
    "activityBar.foreground": "#BBBBBB",
    "statusBar.background": "#3C3F41",
    "statusBar.foreground": "#BBBBBB",
    "panel.background": "#2B2B2B",
    "panel.foreground": "#A9B7C6",
    "editorLineNumber.foreground": "#606366",
    "editorLineNumber.activeForeground": "#A9B7C6",
    "editorCursor.foreground": "#FFFFFF",
    "editor.selectionBackground": "#214283",
    "editor.selectionHighlightBackground": "#214283",
    "editor.wordHighlightBackground": "#575757",
    "editor.wordHighlightStrongBackground": "#575757",
    "editor.findMatchBackground": "#32593D",
    "editor.findMatchHighlightBackground": "#32593D",
    "editorBracketMatch.background": "#575757",
    "editorBracketMatch.border": "#575757",
    "editorIndentGuide.activeBackground": "#606366",
    "editorIndentGuide.background": "#3C3F41",
    "editorWhitespace.foreground": "#3C3F41",
    "editorGutter.background": "#2B2B2B",
    "editorLineHighlight.background": "#323232",
    "editorLineHighlight.border": "#323232",
    "input.background": "#3C3F41",
    "input.foreground": "#A9B7C6",
    "input.border": "#606366",
    "list.activeSelectionBackground": "#214283",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#3C3F41",
    "list.hoverBackground": "#3C3F41",
    "scrollbarSlider.background": "#606366",
    "scrollbarSlider.hoverBackground": "#808080",
    "scrollbarSlider.activeBackground": "#A0A0A0"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "foreground": "#808080",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "string",
        "settings": {
          "foreground": "#6A8759"
        }
      },
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#6897BB"
        }
      },
      {
        "scope": "keyword",
        "settings": {
          "foreground": "#CC7832",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "storage.type",
        "settings": {
          "foreground": "#CC7832"
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#FFC66D"
        }
      },
      {
        "scope": "entity.name.class",
        "settings": {
          "foreground": "#FFC66D"
        }
      },
      {
        "scope": "variable.other.property",
        "settings": {
          "foreground": "#9876AA"
        }
      },
      {
        "scope": "variable",
        "settings": {
          "foreground": "#A9B7C6"
        }
      },
      {
        "scope": "entity.name.tag",
        "settings": {
          "foreground": "#E8BF6A"
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "foreground": "#BBB529"
        }
      }
    ]
  }
}

